.row.edit
  .container.responsive
    %h1.page-title Change your password
    .form
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        .field
          = f.label :password, "New password"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          = f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New password"
        .field
          = f.label :password_confirmation, "Confirm new password"
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter your new password again"
        .actions
          = f.submit "Change my password"
      = render "devise/shared/links"