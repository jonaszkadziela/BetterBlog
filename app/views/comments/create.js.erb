var comments_list = $('#comments-list');
comments_list.append('<%= j (render partial: @comment) %>');
$('*[data-comment-id=' + <%= @comment.id %> + ']').animateCss('zoomIn');
$('#comments-count').html('<%= j (pluralize(@post.comments.count, "comment")) %>');
$('#comment-form').html('<%= j (render "comments/form", comment: @new_comment) %>');